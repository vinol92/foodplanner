<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#405F48"
    android:id="@+id/infousu2">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="412dp"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/back" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="379dp"
                android:layout_height="19dp"
                android:progressTint="@color/lightgreen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.036" />

            <TextView
        android:id="@+id/textView"
        android:layout_width="371dp"
        android:layout_height="45dp"
        android:text="En cuanto a la alimentación, ¿Que tipo de dieta sigues?"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="369dp"
                android:layout_height="33dp"
                android:text="Selecciona todas las opciones que correspondan."
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.193" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="369dp"
                android:layout_height="33dp"
                android:layout_marginTop="16dp"
                android:text="¿Tienes otro tipo de alergia o intolerancia?, especificanoslo aqui."
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gluten" />

            <CheckBox
                android:id="@+id/vegano"
                android:layout_width="379dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/seleccion"
                android:text="Dieta vegana"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <CheckBox
                android:id="@+id/grasa"
                android:layout_width="379dp"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/seleccion"
                android:text="Bajo en grasa"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lacteo" />

            <CheckBox
                android:id="@+id/lacteo"
                android:layout_width="379dp"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/seleccion"
                android:text="Intolerancia a la lactosa"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/azucar" />

            <CheckBox
                android:id="@+id/azucar"
                android:layout_width="379dp"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/seleccion"
                android:text="Dieta baja en azúcar"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pescetariano" />

            <CheckBox
                android:id="@+id/pescetariano"
                android:layout_width="379dp"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/seleccion"
                android:text="Dieta pescetariana"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vegetariano" />


            <CheckBox
                android:id="@+id/gluten"
                android:layout_width="379dp"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/seleccion"
                android:text="Intolerancia al gluten"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.437"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/grasa" />

            <CheckBox
                android:id="@+id/vegetariano"
                android:layout_width="379dp"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/seleccion"
                android:text="Dieta vegetariana"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vegano" />

            <LinearLayout
                android:id="@+id/container_alergias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView3">

                <!-- Aquí se agregarán los EditText dinámicos -->

            </LinearLayout>

            <Button
                android:id="@+id/btn_agregar_alergia"
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="46dp"
                android:background="@drawable/botonesstilo"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/siguiente"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_alergias"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/siguiente"
                android:layout_width="210dp"
                android:layout_height="41dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/botonesstilo"
                android:text="Siguiente"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>