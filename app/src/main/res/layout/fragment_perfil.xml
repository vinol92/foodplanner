<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/perfilLayout"
    android:background="@color/withegreen"
    tools:context=".Views.PerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="121dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/anadirfoto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Tipo Suscripcion"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/intextsub"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:hint="SuscripciÃ³n"
                android:text="normal"
                android:focusable="false"
                android:textColor="@color/black"

                android:focusableInTouchMode="false"
                android:inputType="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/intextnombre"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:textColor="@color/black"

                android:hint="Nombre" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Apellidos"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/intextapellido"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:textColor="@color/black"

                android:hint="Apellidos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Usuario"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/intextusuario"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:textColor="@color/black"

                android:hint="Usuario" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/intextemail"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:hint="Email" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/black"

            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Alergias o \nIntolerancias"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/intextalergia"
                android:layout_width="0dp"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:hint="Alergias"
                android:textColor="@color/black"

                android:inputType="textMultiLine"
                android:scrollbars="vertical" />
        </LinearLayout>

        <Button
            android:id="@+id/guardar"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/botonesstilo"
            android:text="Guardar Cambios"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>
