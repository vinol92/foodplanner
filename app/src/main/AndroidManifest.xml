<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/broccoli"
        android:label="@string/app_name"
        android:roundIcon="@drawable/broccoli"
        android:supportsRtl="true"
        android:theme="@style/Theme.Foodplanner"
        tools:targetApi="34">
        <activity
            android:name=".Views.OcrActivity"
            android:exported="false" />
        <activity
            android:name=".Views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.RecipeInfoActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Views.registro" />
        <activity android:name=".Views.RegistroNutri" />
        <activity android:name=".Views.RegistroNutri2" />
        <activity android:name=".Views.Bienvenida" />
        <activity android:name=".Views.InfoUsuario" />
        <activity android:name=".Views.InfoUsuario2" />
        <activity android:name=".Views.Inicio" />
    </application>

</manifest>